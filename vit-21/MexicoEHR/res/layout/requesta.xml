                    <EditText
                        android:id="@+id/rlk3a"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="0.31"
                         android:visibility = "gone"
                        android:ems="10"
                        android:inputType="textMultiLine" />

                    <TextView
                        android:id="@+id/lk41a"
                        android:layout_width="match_parent"
