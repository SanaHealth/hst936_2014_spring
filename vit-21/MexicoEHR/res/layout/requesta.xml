                    <EditText
                        android:id="@+id/rlk5a"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                         android:visibility = "gone"
                        android:layout_weight="0.31"
                        android:ems="10"
                        android:inputType="textMultiLine" />
                    <Button
                        android:id="@+id/rbra"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                         android:visibility = "gone"
                        android:text="Save" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>

</LinearLayout>